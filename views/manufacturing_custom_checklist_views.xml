<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <data>

    <record id="view_manufacturing_custom_checklist_list" model="ir.ui.view">
        <field name="name">view.manufacturing.custom.checklist.list</field>
        <field name="model">manufacturing.checklist</field>
        <field name="arch" type="xml">
            <list string="Kalite Kontrol Soruları" multi_edit="1">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="view_manufacturing_custom_checklist_form" model="ir.ui.view">
        <field name="name">view.manufacturing.custom.checklist.form</field>
        <field name="model">manufacturing.checklist</field>
        <field name="arch" type="xml">
            <form string="Kalite Kontrol Soruları">
                <sheet>
                    <group col="4">
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_manufacturing_checklist_views" model="ir.actions.act_window">
        <field name="name">Kalite Kontrol Soruları</field>
        <field name="res_model">manufacturing.checklist</field>
        <field name="view_mode">list,form</field>
        <field name="type">ir.actions.act_window</field>
    </record>


    <record id="view_manufacturing_custom_checklist_template_list" model="ir.ui.view">
        <field name="name">view.manufacturing.custom.checklist.template.list</field>
        <field name="model">manufacturing.checklist.template</field>
        <field name="arch" type="xml">
            <list string="Kalite Kontrol Listeleri" multi_edit="1">
                <field name="sequence" widget="handle"/>
                <field name="template_name"/>
                <field name="checklist_ids" widget="many2many_tags" optional="show"/>
            </list>
        </field>
    </record>

    <record id="view_manufacturing_custom_checklist_template_form" model="ir.ui.view">
        <field name="name">view.manufacturing.custom.checklist.template.form</field>
        <field name="model">manufacturing.checklist.template</field>
        <field name="arch" type="xml">
            <form string="Kalite Kontrol Listeleri">
                <sheet>
                    <group col="4">
                        <field name="template_name"/>
                        <field name="checklist_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_manufacturing_checklist_template_views" model="ir.actions.act_window">
        <field name="name">Kalite Kontrol Listeleri</field>
        <field name="res_model">manufacturing.checklist.template</field>
        <field name="view_mode">list,form</field>
        <field name="type">ir.actions.act_window</field>
    </record>


    <record id="mrp_view_search_inherit" model="ir.ui.view">
        <field name="name">mrp.view.search.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_filter"/>
        <field name="arch" type="xml">
            <search>
                <filter name="checklist_progress" string="Kalite Kontrol Tamamlandı"
                        domain="[('checklist_progress' , '=' , '100')]"/>
                <filter name="checklist_progress" string="Kalite Kontrol Tamamlanmadı"
                        domain="[('checklist_progress' , '!=' , '100')]"/>
            </search>
        </field>
    </record>

    <record id="mrp_production_list_views_inehrit" model="ir.ui.view">
        <field name="name">mrp.production.list.views.inehrit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
        <field name="arch" type="xml">

            <field name="product_id" position="before">
                <field name="checklist_progress" widget="progressbar" optional="show"/>
            </field>

        </field>
    </record>

